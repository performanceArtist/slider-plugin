include ../checkmark/checkmark

mixin input(type, name='', label='')
  .panel__input-wrapper
    input(type=type, name=name, required).panel__input
    label(for=name).panel__label #{label}

mixin panel
  .panel
    .panel__wrapper
      h2 Configure
      form(action='', class='panel__form' id=id)
        .panel__column.panel__column_left
          .panel__value-inputs
          +input('number', 'min', 'Min')
          +input('number', 'max', 'Max')
          +input('number', 'step', 'Step')
        .panel__column.panel__column_right
          .panel__checkmark
            +checkmark({name:'showBubble', type:'checkbox', label:'Show bubble'})
          .panel__checkmark
            +checkmark({name:'showSteps', type:'checkbox', label:'Show steps'})
          .panel__checkmark
            +checkmark({name:'isHorizontal', type:'checkbox', label:'Horizontal'})
          .panel__checkmark
            +checkmark({name:'hasInterval', type:'checkbox', label:'Interval'})
        


  